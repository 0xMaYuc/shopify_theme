<section class="Section sk-benefits-image-gallery Section--spacingNormal">
  


  <div class="TripleBenefits">
    <div class="TripleBenefits__Header">
      <h3 class="Heading">{{section.settings.mainHeadline}}</h3>
    </div>
  <div class="TripleBenefits__Wrapper">
    <div class="TripleBenefits__reel">
      <div class="TripleBenefits__reel-track">
      
      <div class="slider-container--triple">
        <button class="slick-prev slick-arrow" aria-label="Previous" type="button" style="display: none;">Previous</button>
        <div class="slider sliderTriple slider-custom">
          
          <div class="TripleBenefits__reel-img TripleBenefits__reel-img--active" style="" aria-hidden="true" tabindex="0" role="tabpanel" id="slick-slide00" aria-describedby="slick-slide-control00">
            <div class="TripleBenefits__badge">
              <span>
              {{section.settings.textShort1}}
              </span>
            </div>
           <img src="{{ section.settings.image1 | img_url: '600px' }}" alt="{{section.settings.image1}}">
             
         </div><div class="TripleBenefits__reel-img" style="" aria-hidden="true" tabindex="-1" role="tabpanel" id="slick-slide01" aria-describedby="slick-slide-control01">
          <div class="TripleBenefits__badge">
            <span>
              {{section.settings.textShort2}}
            </span>
          </div>
          <img src="{{ section.settings.image2 | img_url: '600px' }}" alt="{{section.settings.image2}}">
        </div><div class="TripleBenefits__reel-img" style="" aria-hidden="true" tabindex="-1" role="tabpanel" id="slick-slide02" aria-describedby="slick-slide-control02">
          <div class="TripleBenefits__badge">
            <span>
              {{section.settings.textShort3}}
            </span>
          </div>
          <img src="{{ section.settings.image3 | img_url: '600px' }}" alt="{{section.settings.image3}}">
        </div></div>
          <button class="slick-next slick-arrow" aria-label="Next" type="button" style="display: none;">Next</button>
        </div>
      
      </div>
    </div>
    <div class="TripleBenefits__details">
      <div class="Container">
        <div class="TripleBenefits__details-info TripleBenefits__details-info--active" id="TB_info_1">
          <h2 class="Heading">{{section.settings.textLongHeadline1}}</h2>
          <p>{{section.settings.textLong1}}</p>
        </div>
        <div class="TripleBenefits__details-info" id="TB_info_2">
          <h2 class="Heading">{{section.settings.textLongHeadline2}}</h2>
          <p>{{section.settings.textLong2}}</p>
        </div>
        <div class="TripleBenefits__details-info" id="TB_info_3">
          <h2 class="Heading">{{section.settings.textLongHeadline3}}</h2>
          <p>{{section.settings.textLong3}}</p>
        </div>
      </div>
    </div>
  </div>
</div>


  </section>
  
  <style>
    .sk-benefits-image-gallery {
      background: {{ section.settings.background }};
      padding: 50px 0;
    }

    .TripleBenefits__reel-img > img {
      transition:transform 0.25s ease;
  }
  
  .TripleBenefits__reel-img > img:hover {
      -webkit-transform:scale(1.5);
      transform:scale(1.5);
  }
  
  </style>
  
