<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="shoebenefit">
  <div class="section-icons">

    <h3 class="Heading">{{section.settings.headline}}</h3>
    <h5 class="Heading">{{section.settings.subline}}</h5>

    <div class="container no-style w-container">
        <div class="section-icons__block">
                <div class="icon-image__block">
                    <img class="section-icons__icon" src="{{ section.settings.imagesupport1 | img_url: 'master' }}" alt="{{ section.settings.imagesupport1 }}" width="120" height="120" />
                    <div class="section-icons__text">
                        <span class="section-icons-heading">
                            {{section.settings.headline1}}
                        </span>
                        <span class="section-icons-description">
                            {{section.settings.text1}}
                      </span>
                    </div>
                </div>

                <div class="icon-image__block">
                    <img class="section-icons__icon" src="{{ section.settings.imagesupport2 | img_url: 'master' }}" alt="{{ section.settings.imagesupport2 }}" width="120" height="120" />
