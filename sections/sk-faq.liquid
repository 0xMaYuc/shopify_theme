<style>
  
  .button-secondary-outline {border: 1px solid #242424; border-radius: 22222px; color: #000;}
  .button-secondary-outline, .button-secondary-outline-white {
    margin-top: 50px;
    -webkit-box-align: center;
    align-items: center;
    background-color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: -.3px;
    padding: 0.75rem 2.5rem;
    text-transform: none;
    transition: all .3s;
    white-space: nowrap;
        -webkit-box-pack: center;
    -ms-flex-pack: center;
    -moz-box-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
  }
  
  
  .faq {
  margin-top: 40px;
  max-width: 680px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 100px;
    padding: 0 24px;
}

.faq .page-title {
  text-align: center;
  margin-bottom: 25px;
      font-size: 22px;
    font-family: var(--heading-font-family);
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
    color: var(--heading-color);
    transition: color 0.2s ease-in-out;
}

.faq-section--title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28px 0;
  border-bottom: 1px solid #cdd5d9;
}

.faq-section--title-wrapper svg {
  width: 50px;
  fill: #00b388;
}

.faq-section--title {
  position: relative;
  width: 100%;
  padding-left: 0px;
  color: #333;
  font-size: 18px;
  font-weight: 600;
  box-sizing: border-box;
  cursor: pointer;
}

.faq-section > ul {
  display: none;
}

.faq-section.open > ul {
  display: block;
  cursor: pointer;
  padding-left: 0;
  margin-top: 0;
  margin-bottom: 0;
  transition: transform 0.4s;
}

.faq-section > ul li {
  position: relative;
  width: 100%;
}

.faq-section--item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 0;
  color: #333;
  font-weight: 600;
  font-size: 14px;
}

.faq-section--item-title:hover {
  color: #00b388;
}

.faq-section--item-title svg {
  width: 20px;
  height: 15px;
}

.faq-section--item-desc {
  padding-bottom: 20px;
  line-height: 20px;
}

.faq-section--item-desc h3 {
  line-height: 30px;
}

.faq-section--item-desc table,
.faq-section--item-desc table td {
  border: 1px solid #adc6dd;
}

.faq-section > ul li .faq-section--item-desc {
  display: none;
}

.faq-section > ul > li.open .faq-section--item-title svg {
  transform: rotate(180deg);
  transition: transform 0.4s;
}

.faq-section > ul li.open .faq-section--item-desc {
  display: block;
}

.faq-section ul li + li {
  border-top: 1px solid #cdd5d9;
}

.faq-section ul {
  list-style: none;
}

.faq-section--item-desc.close {
  display: none;
}
</style>


